{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "alwaysStrict": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "downlevelIteration": true,
    "lib": ["es2017"],
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
		"src/**/*"
	]
}
